#!/usr/bin/env bash

# if we want to grab, then git pr and set mob timer to 10 minutes
if [ "$1" == "grab" ]; then
  git pull --rebase
  cowsay "Go Driver, Go!"
  (sleep 600 && cowsay "Time to Switch" && say "mob done") &
  exit
fi

# if we want to share, then git commit with a with and push
if [ "$1" == "share" ]; then
  git commit -am "WIP: $2"
  git push
  exit
fi
